generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Password {
  id       String @id @default(cuid())
  password String @unique
}

model Schools {
  id        String   @id @default(cuid())
  logo      String   @default("")
  name      String
  location  String
  tiers     Tiers
  category  Category
  status    Status   @default(APPLYING)
  ms_status MsStatus @default(RESEARCH_BASED)
}

enum MsStatus {
  RESEARCH_BASED
  PROFESSIONAL_TRACK
  NO_MASTERS
}

enum Tiers {
  SAFETY
  TARGET
  REACH
  NOT_SURE
}

enum Category {
  AROUND_ILLINOIS
  IN_CHICAGO
  IN_ILLINOIS
  IN_CALIFORNIA
  FAR
}

enum Status {
  APPLYING
  APPLIED
  REJECTED
  ACCEPTED
}
