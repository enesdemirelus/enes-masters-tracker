generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Schools {
  id       String   @id @default(cuid())
  name     String
  location String
  tiers    Tiers
  category Category
}

enum Tiers {
  SAFETY
  TARGET
  REACH
  NOT_SURE
}

enum Category {
  AROUND_ILLINOIS
  IN_CHICAGO
  IN_ILLINOIS
  IN_CALIFORNIA
  FAR
}
